<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<AnchorPane fx:id="gameMain" prefHeight="720.0" prefWidth="1080.0" stylesheets="@img/UnoStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Pane layoutX="40.0" layoutY="50.0" prefHeight="400.0" prefWidth="1000.0">
            <children>
                <HBox fx:id="table" alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="800.0" style="-fx-border-color: grey; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-border-style: dashed" />
                <VBox id="avatar0" layoutX="200.0" layoutY="-50.0" prefHeight="100.0" prefWidth="100.0"  />
                <VBox id="avatar1" layoutX="450.0" layoutY="-50.0" prefHeight="100.0" prefWidth="100.0" />
                <VBox id="avatar2" layoutX="700.0" layoutY="-50.0" prefHeight="100.0" prefWidth="100.0" />
                <VBox id="avatar3" layoutX="900.0" layoutY="150.0" prefHeight="100.0" prefWidth="100.0" />
                <VBox id="avatar4" layoutX="700.0" layoutY="350.0" prefHeight="100.0" prefWidth="100.0" />
                <VBox id="avatar5" layoutX="450.0" layoutY="350.0" prefHeight="100.0" prefWidth="100.0" />
                <VBox id="avatar6" layoutX="200.0" layoutY="350.0" prefHeight="100.0" prefWidth="100.0" />
            </children>
        </Pane>
        <Pane prefHeight="25.0" prefWidth="25.0" fx:id="colorPanel" layoutX="800.0" layoutY="100" styleClass="color-transparent"/>
        <Button prefHeight="80.0" prefWidth="80.0" fx:id="skip" onAction="#skipAction">
            Salta
        </Button>
        <ScrollPane fx:id="myCards" style="-fx-padding: 0 0 15px 0" layoutY="500.0" prefHeight="220.0" prefWidth="1080.0">
            <content>
                <Pane prefHeight="400.0" prefWidth="1080.0" fx:id="paneContainer">
                    <children>
                        <HBox prefHeight="200.0" prefWidth="1080.0" fx:id="firstRow" style="-fx-padding: 0 75px 0px 75px"><children></children></HBox>
                        <HBox layoutY="200.0" prefHeight="200.0" prefWidth="1080.0" fx:id="secondRow" style="-fx-padding: 0 75px 0px 75px"><children></children></HBox>
                    </children>
                </Pane>

            </content>
        </ScrollPane>
    </children>
</AnchorPane>
